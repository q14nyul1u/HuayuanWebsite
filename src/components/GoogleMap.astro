---
// src/components/GoogleMap.astro
export interface Props {
    embedUrl: string;
    height?: string;
    title?: string;
}

const { embedUrl, height = "450", title = "Google Maps Karte" } = Astro.props;
---

<div class="map-wrapper">
    <iframe
            src={embedUrl}
            width="100%"
            height={height}
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title={title}>
    </iframe>
</div>

<style>
    .map-wrapper {
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 1rem 0;
    }

    iframe {
        display: block;
    }
</style>

