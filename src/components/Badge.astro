---
const { color = "blue", title = "" }: BadgeProps = Astro.props;

interface BadgeProps {
	color?: "red" | "blue";
	title?: string;
}

const colors = {
	red: "bg-brand-red/5 text-brand-red ring-1 ring-brand-red",
	blue: "bg-brand-blue/5 text-brand-blue ring-1 ring-brand-blue",
	white: "bg-white",
};
---

<span class={`inline-flex not-prose items-center mb-4 rounded-full px-3 py-1 text-base font-semibold ${colors[color]}`}
	>{title}</span
>
