---
export interface Props {
    href: string;
    text?: string;
    position?: 'top' | 'middle' | 'bottom';
}

const {
    href,
    text = "contact",
    position = "middle",
} = Astro.props;

const positionClass = {
    top: 'top-20',
    middle: 'top-1/2 -translate-y-1/2',
    bottom: 'bottom-20'
}[position];
---
<a
        href={href}
        class={`scroll-button text-brand-blue fixed right-6 z-50 px-4 py-3 rounded-lg shadow-lg font-medium transition-all duration-300 hover:shadow-xl gap-2 hover:scale-105 ${positionClass}`}
>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
         stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
    </svg>
    {text}
</a>


<style>
    .scroll-button {
        /* Zusätzliche Styles für bessere Sichtbarkeit */
        backdrop-filter: blur(10px);
        border: 1px solid #2980b9;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 120px;
    }

    .scroll-button:hover {
        transform: translateY(-2px) scale(1.05);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .scroll-button {
            right: 1rem;
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
            min-width: 100px;
        }
    }
</style>