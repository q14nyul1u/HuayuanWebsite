---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
---

<Layout>
	<Section>
		<div class="min-h-full mx-auto w-full max-w-6xl">
			<div class="text-center">
				<p class="font-bold text-brand-red text-8xl">404</p>
				<h1 class="mt-8 text-4xl font-black text-balance lg:text-5xl">无法找到此页面。</h1>
				<div class="mt-16">
					<a href="/public" class="button button-blue">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 20 20"
							fill="currentColor"
							class="size-4 inline-block -mt-0.5 mr-1"
						>
							<path
								fill-rule="evenodd"
								d="M9.293 2.293a1 1 0 0 1 1.414 0l7 7A1 1 0 0 1 17 11h-1v6a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3a1 1 0 0 0-1-1H9a1 1 0 0 0-1 1v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-6H3a1 1 0 0 1-.707-1.707l7-7Z"
								clip-rule="evenodd"></path>
						</svg>
						回到首页
					</a>
				</div>
			</div>
		</div>
	</Section>
</Layout>
